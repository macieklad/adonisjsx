{
  "name": "adonisjsx",
  "description": "AdonisJS package for adding JSX as your templating engine",
  "version": "0.1.1",
  "engines": {
    "node": ">=18.16.0"
  },
  "type": "module",
  "files": [
    "build",
    "!build/bin",
    "!build/tests",
    "!build/factories"
  ],
  "exports": {
    ".": "./build/index.js",
    "./register": "./build/register.js",
    "./jsxProvider": "./build/providers/jsx_provider.js"
  },
  "scripts": {
    "clean": "del-cli build",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "quick:test": "node --import=./tsnode.esm.js --enable-source-maps bin/test.ts",
    "pretest": "npm run lint",
    "test": "c8 npm run quick:test",
    "prebuild": "npm run lint && npm run clean",
    "build": "tsc",
    "postbuild": "npm run copy:templates",
    "release": "np",
    "release:local": "npm run build && npm pack",
    "version": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@adonisjs/core": "^6.3.1",
    "@kitajs/html": "^3.1.2",
    "@kitajs/ts-html-plugin": "^1.3.4",
    "defu": "^6.1.4",
    "@adonisjs/shield": "^8.1.1",
    "@adonisjs/vite": "^2.0.2"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.2.3",
    "@adonisjs/core": "^6.3.1",
    "@adonisjs/eslint-config": "^1.3.0",
    "@adonisjs/prettier-config": "^1.3.0",
    "@adonisjs/tsconfig": "^1.3.0",
    "@japa/assert": "^2.1.0",
    "@japa/runner": "^3.1.1",
    "@swc/core": "^1.4.8",
    "@types/node": "^20.10.8",
    "c8": "^9.1.0",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.1.0",
    "eslint": "^8.57.0",
    "np": "^10.0.2",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "np": {
    "message": "chore(release): %s",
    "tag": "latest",
    "branch": "main",
    "anyBranch": false
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
  },
  "prettier": "@adonisjs/prettier-config"
}
